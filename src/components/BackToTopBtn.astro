<button id="back-to-top" aria-label="Back to top" title="Back to top">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="36"
    height="36"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M18 15l-6-6-6 6"></path>
  </svg>
</button>

<style>
  button {
    position: sticky;
    bottom: 30px;
    margin-left: auto;
    margin-right: 20px;
    background-color: var(--blue);
    color: white;
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.3s,
      transform 0.3s;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
  }

  button.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const backToTopButton = document.getElementById("back-to-top");

    // Create a marker element at 1/2 of the page
    const marker = document.createElement("div");
    marker.style.position = "absolute";
    marker.style.top = "0";
    marker.style.left = "0";
    marker.style.width = "1px";
    marker.style.height = `${window.innerHeight / 0.375}px`;
    marker.style.visibility = "hidden";
    document.body.appendChild(marker);

    // Set up the Intersection Observer
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          // When marker is no longer visible (scrolled past 1/3 of the page)
          if (!entry.isIntersecting) {
            backToTopButton?.classList.add("visible");
          } else {
            backToTopButton?.classList.remove("visible");
          }
        });
      },
      { threshold: 0 }
    );

    // Start observing the marker
    observer.observe(marker);

    // Add click event to scroll back to top
    backToTopButton?.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  });
</script>
